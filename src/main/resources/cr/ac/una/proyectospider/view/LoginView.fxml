<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@StyleSpider.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cr.ac.una.proyectospider.controller.LoginController">
   <center>
      <AnchorPane id="AnchorPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="800.0">
         <children>
            <StackPane fx:id="spBackgroundLogin" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ImageView fx:id="imgBackgroundLogin" pickOnBounds="true" />
                  <VBox alignment="CENTER" maxWidth="1.7976931348623157E308">
                     <children>
                        <VBox alignment="CENTER" spacing="20.0">
                           <children>
                              <StackPane fx:id="spLoginInfo" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="150.0" prefWidth="200.0" styleClass="sp-imagelogo">
                                 <children>
                                    <ImageView fx:id="imgLoginInfo" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                              </StackPane>
                              <Label fx:id="lblTitulo" styleClass="label-subtitle" text="BIENVENIDO A TU AVENTURA SPIDER" />
                              <StackPane fx:id="spTextFieldContainer" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="45.0" prefWidth="575.0">
                                 <children>
                                    <TextField fx:id="txtfildLogin" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="570.0" promptText="INGRESA UN NOMBRE DE USUARIO O REGISTRATE" />
                                 </children>
                              </StackPane>
                              <HBox alignment="CENTER" spacing="20.0">
                                 <children>
                                    <ImageView fx:id="btnRegistrarJugador" fitHeight="70.0" fitWidth="170.0" onMouseClicked="#onMouseClickedbtnRegistrarJugador" pickOnBounds="true" preserveRatio="true" styleClass="neon-image-button" />
                                    <ImageView fx:id="BtnIniciarSesion" fitHeight="70.0" fitWidth="200.0" onMouseClicked="#onMouseClickedbtnIniciarSesion" pickOnBounds="true" preserveRatio="true" styleClass="neon-image-button" />
                                 </children>
                              </HBox>
                              <ImageView fx:id="btnAcercaDe" fitHeight="70.0" fitWidth="170.0" onMouseClicked="#onMouseClickedbtnAcercaDe" pickOnBounds="true" preserveRatio="true" styleClass="neon-image-button" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
